{
  "include": ["src"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"]
    },

    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
